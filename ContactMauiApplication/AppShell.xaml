<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ContactMauiApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ContactMauiApplication"
    
    xmlns:pages="clr-namespace:ContactMauiApplication.Pages"
    
    Shell.FlyoutBehavior="Flyout"
    Title="ContactMauiApplication">

    <FlyoutItem Title="Home">
        <ShellContent Title="Home" Route="HomePage" ContentTemplate="{DataTemplate pages:HomePage}" />
    </FlyoutItem>

    <FlyoutItem Title="Add Contact">
        <ShellContent Title="Add Contact" Route="AddContactPage" ContentTemplate="{DataTemplate pages:AddContactPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Contact List">
        <ShellContent Title="Contact List" Route="ViewContactListPage" ContentTemplate="{DataTemplate pages:ViewContactListPage}" />
    </FlyoutItem>

</Shell>
